<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AssaultBird2454.VPTU.SaveEditor.UI.Settings"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" x:Class="AssaultBird2454.VPTU.SaveEditor.UI.Settings.Setting_Value_Decimal"
             mc:Ignorable="d" Height="26">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="Node_Name" Content="Setting Name"/>

        <xctk:IntegerUpDown x:Name="Node_Decimal" Grid.Column="1"
            HorizontalContentAlignment="Center" Value="0"
            VerticalContentAlignment="Center" MinWidth="150" TextAlignment="Center" />
    </Grid>
</UserControl>
